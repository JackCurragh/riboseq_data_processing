/*
* SLURM cluster configuration
* Use with: nextflow run main.nf -profile slurm
*/

process {
    executor = 'slurm'

    // Default resources
    cpus = 1
    memory = '4.GB'
    time = '6.h'

    // Override for labeled processes
    withLabel: 'process_high' {
        cpus = 16
        memory = '32.GB'
        time = '24.h'
    }

    withLabel: 'process_medium' {
        cpus = 8
        memory = '16.GB'
        time = '12.h'
    }

    withLabel: 'process_low' {
        cpus = 2
        memory = '4.GB'
        time = '6.h'
    }
}

singularity {
    enabled = true
    autoMounts = true
} 